{
    "manifest_version": 3,
    "name": "HM Research Redirecter",
    "version": "1.0",
    "description": "Redirects public wesites to the premium version through the HM Login-System",
    "author": "Moritz Wagner (Github: @moritzwagner)",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.statista.com/*",
                "https://de.statista.com/*",
                "https://link.springer.com/*",
                "https://www.hanser-elibrary.com/*"
            ]
        }
    ]
}